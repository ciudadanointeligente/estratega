<script type="text/ng-template" id="add-ask.html">
  <div class="modal-header">
    <h3 class="modal-title">Asks</h3>
  </div>
  <div class="modal-body">
    <form>
      <div class="form-group">
        <label for="target-audience">Actor</label>
        <select name="actor" ng-options="actor.id as actor.name for actor in actors" ng-model="current_ask.actor_id">
        </select>
      </div>
      <div class="form-group">
        <label for="ask">Ask</label>
        <textarea name="description" class="form-control" rows="3" ng-model="current_ask.description" placeholder="Write Ask"></textarea>
      </div>
    </form>
  </div>
  <div class="modal-footer">
    <button class="btn btn-primary" ng-click="save($event)">Save</button>
    <button class="btn btn-warning" ng-click="cancel($event)">Cancel</button>
  </div>
</script>
