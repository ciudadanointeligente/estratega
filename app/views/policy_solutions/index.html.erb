<h1>Listing policy_solutions</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Policy problem</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @policy_solutions.each do |policy_solution| %>
      <tr>
        <td><%= policy_solution.title %></td>
        <td><%= policy_solution.description %></td>
        <td><%= policy_solution.policy_problem %></td>
        <td><%= link_to 'Show', policy_solution %></td>
        <td><%= link_to 'Edit', edit_policy_solution_path(policy_solution) %></td>
        <td><%= link_to 'Destroy', policy_solution, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

