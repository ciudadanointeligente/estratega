<%= simple_form_for(@actor) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :actor_type %>
    <%= f.input :support %>
    <%= f.input :influence %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
