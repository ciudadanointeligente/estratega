<%= javascript_include_tag "steps" %>
<script type="text/javascript">
$(document).ready(function () {

<% if params[:step] == "2" %> 
    $('#step-1').css('display','none');
    $('[href=#step-1]').removeClass('btn-primary');
    $('#btn-step-1').attr('disabled','disabled');

    $('#step-2').css('display','block');
    $('[href=#step-2]').removeAttr('disabled');
    $('[href=#step-2]').addClass('btn-primary');
<% end %>

<% if params[:step] == "3" %> 
    $('#step-1').css('display','none');
    $('#step-2').css('display','none');

    $('[href=#step-1]').removeClass('btn-primary');
    $('[href=#step-2]').removeClass('btn-primary');
    $('[href=#step-2]').removeAttr('disabled');
    // $('#btn-step-2').attr('disabled','disabled')

    $('#step-3').css('display','block');
    $('[href=#step-3]').removeAttr('disabled');
    $('[href=#step-3]').addClass('btn-primary');
<% end %>

});
</script>
