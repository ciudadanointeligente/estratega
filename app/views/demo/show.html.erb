<% content_for :breadcrumb do %>
  <div class="breadcrumb_bg">
    <ol class="breadcrumb container">
      <li>
        <%= link_to t('.projects'), demo_index_path, target: "_self" %>
      </li>
      <li class="active"><%= truncate(@project.title, length: 30) %></li>
    </ol>
  </div>
<% end %>

<div role="tabpanel">
  <ul class="nav nav-tabs" role="tablist" data-step="3" data-intro="<%= t('.step_three') %>">
    <li role="presentation" class="active"><a href="#stages" aria-controls="stages" role="tab" data-toggle="tab"><%= t('.stages') %></a></li>
    <li role="presentation"><a href="#dashboard" aria-controls="dashboard" role="tab" data-toggle="tab"><%= t('.dashboard') %></a></li>
    <li role="presentation"><a href="#documents" aria-controls="documents" role="tab" data-toggle="tab"><%= t('.documents') %></a></li>
    <li role="presentation"><a href="#overview" aria-controls="overview" role="tab" data-toggle="tab"><%= t('.overview') %></a></li>
  </ul>


  <div class="project-hero02">
    <h2><%= @project.title %></h2>
    <p><%= @project.description %></p>
    <button class="btn btn-success" onclick="javascript:introJs().setOptions({exitOnOverlayClick: false}).start();">
      <i class="fa fa-map"></i> Guíame
    </button>
  </div>

  <!-- tab panes -->
  <div class="tab-content">
    <div role="tabpanel" class="tab-pane active" id="stages">
      <div data-step="4" data-intro="<%= t('.step_four') %>">
        <div class="">
          <h3 class="mb50">Etapa 1: Identificar el problema y los objetivos políticos a lograr</h3>
          <div class="panel panel-default">
            <div class="panel-heading">
              <h4 class="panel-title" title="Complete Stage"><a data-toggle="collapse" href="#stage1" aria-expanded="false" aria-controls="collapseExample"><i class="<%= icon_class_stage 1 %>"></i> Step 1: Describa el problema y la correspondiente solución de política pública</a></h4>
            </div>
            <div class="collapse steps in" id="stage1">
              <table class="table">
                  <tbody>
                    <!-- real problem -->
                    <tr title="Complete Step">
                      <td class="text-center td-w-10p">
                        <i class="<%= icon_class @real_problem %>"></i>
                      </td>
                      <td>
                        <%= link_to link_text(:real_problem), stage1_demo_path, target: "_self"  %>
                      </td>
                    </tr>
                    <!-- policy problems -->
                    <tr title="Complete Step">
                      <td class="text-center td-w-10p">
                          <i class="<%= icon_class @policy_problems, @real_problem %>"></i>
                      </td>
                      <td>
                        <%= link_to link_text(:policy_problems), stage1_demo_path(anchor: "policy-problems"), target: "_self" %>
                      </td>
                    </tr>
                    <!-- policy solutions -->
                    <tr title="Complete Step">
                      <td class="text-center td-w-10p">
                        <i class="<%= icon_class @solutions, @policy_problems %>"></i>
                      </td>
                      <td>
                        <%= link_to link_text(:solutions), stage1_demo_path(anchor: "policy-problems"), target: "_self" %>
                      </td>
                    </tr>
                  </tbody>
            </table>
            </div>
          </div>
        </div>
      </div>
      <div class="">
        <div class="">
          <div class="panel panel-default">
            <div class="panel-heading">
              <h4 class="panel-title" title="You must complete the previous stage"><a data-toggle="collapse" href="#stage2" aria-expanded="false" aria-controls="collapseExample"><i class="<%= icon_class_stage 2 %>"></i> Step 2: Formular los objetivos y ordenarlos en orden de prioridad</a></h4>
            </div>
            <div class="collapse steps" id="stage2">
              <table class="table">
                <tbody>
                  <tr title="You must complete the previous step">
                    <td class="text-center td-w-10p"><i class="<%= icon_class @objectives, @solutions %>"></i></td>
                    <td>
                      <%= link_to link_text(:objectives), stage2_project_path, target: "_self" %>
                    </td>
                  </tr>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
      <hr>
      <h3 class="mb50">Etapa 2 : El Plan para cada uno de sus Objetivos de política priorizados en detalle</h3>
    </div>
    <div role="tabpanel" class="tab-pane" id="dashboard">...</div>
    <div role="tabpanel" class="tab-pane" id="documents">
    </div>
    <div role="tabpanel" class="tab-pane" id="overview">
    </div>
  </div>
</div>

<script>
  $(document).ready(function(){
    if (RegExp('tour', 'gi').test(window.location.search)) {
      introJs().setOption('doneLabel', 'Página Siguiente').start().oncomplete(function() {
        window.location.href = '/demo/1/stage1?tour=true';
      });
      $('.introjs-bullets li a')[0].className = 'active';
    }
  })
</script>