<script type="text/ng-template" id="activities-aside.html">
  <div class="modal-header">
    <h3 class="modal-title">Activities</h3>
  </div>
  <div class="modal-body">
    <div class="form-group">
      <label for="title">Title</label>
      <input name="title" class="form-control" ng-model="current_activity.title" placeholder="Enter a title for an activity">
    </div>
    <div class="form-group">
      <label for="description">Description</label>
      <textarea name="description" class="form-control" ng-model="current_activity.description" placeholder="Enter a description for an activity"></textarea>
    </div>
  </div>
  <div class="modal-footer">
    <button class="btn btn-primary" ng-click="save($event)" ng-class="{disabled: current_activity.title == ''}">Save</button>
    <button class="btn btn-warning" ng-click="cancel($event)">Cancel</button>
  </div>
</script>
