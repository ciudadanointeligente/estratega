<script type="text/ng-template" id="add-ask.html">
  <div class="modal-header">
    <h3 class="modal-title"><%= t('.asks') %></h3>
  </div>
  <div class="modal-body">
    <form>
      <div class="form-group">
        <label for="target-audience"><%= t('.actor') %></label>
        <select name="actor" ng-options="actor.id as actor.name for actor in actors" ng-model="current_ask.actor_id">
        </select>
      </div>
      <div class="form-group">
        <label for="ask"><%= t('.ask') %></label>
        <textarea name="description" class="form-control" rows="3" ng-model="current_ask.description" placeholder="<%= t('.ask_placeholder') %>"></textarea>
      </div>
      <div class="form-group">
        <label for="execution"><%= t('.execution') %></label>
        <input type="checkbox" name="execution" class="form-control" ng-model="current_ask.execution"></input>
      </div>
    </form>
  </div>
  <div class="modal-footer">
    <button class="btn btn-primary" ng-click="save($event)"><%= t('.save_button') %></button>
    <button class="btn btn-warning" ng-click="cancel($event)"><%= t('.cancel_button') %></button>
  </div>
</script>
