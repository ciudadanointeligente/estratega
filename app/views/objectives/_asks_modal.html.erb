<script type="text/ng-template" id="add-ask.html">
  <div class="modal-header">
    <h3 class="modal-title"><%= t('.asks') %></h3>
  </div>
  <div class="modal-body">
    <form>
      <div class="form-group">
        <label for="ask"><%= t('.ask') %></label>
        <textarea name="description" class="form-control" rows="3" ng-model="current_ask.description" placeholder="<%= t('.ask_placeholder') %>"></textarea>
      </div>
      <div class="form-group">
        <label for="ask"><%= t('.person_in_charge') %></label>
        <textarea name="description" class="form-control" rows="3" ng-model="current_ask.person_in_charge" placeholder="<%= t('.person_in_charge_placeholder') %>"></textarea>
      </div>
      <div class="form-group">
        <label for="outcome_id"><%= t('.outcome') %></label>
        <select class="form-control" name="outcome" ng-multiple="false" ng-model="current_ask.outcome_id" ng-options="outcome.id as outcome.description for outcome in outcomes">
        </select>
      </div>
    </form>
  </div>
  <div class="modal-footer">
    <button class="btn btn-primary" ng-click="save($event)"><%= t('.save_button') %></button>
    <button class="btn btn-warning" ng-click="cancel($event)"><%= t('.cancel_button') %></button>
  </div>
</script>
