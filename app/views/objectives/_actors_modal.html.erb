<script type="text/ng-template" id="actor-aside.html">
  <div class="modal-header">
    <h3 class="modal-title">Actor</h3>
  </div>
  <div class="modal-body">
    <form>
      <div class="form-group">
        <label for="influence">Actor Type</label>
        <select class="form-control" id="influence" ng-model="current_actor.actor_type">
          <option value="">Select Actor Type</option>
          <option value="Person">Person</option>
          <option value="Organization">Organization</option>
        </select>
      </div>
      <div class="form-group">
        <label for="title">Name</label>
        <input type="text" name="name" class="form-control" ng-model="current_actor.name" placeholder="Enter the actor's name">
      </div>
      <div class="form-group">
        <label for="description">Description</label>
        <textarea name="description" class="form-control" ng-model="current_actor.description" placeholder="Add any important actor info"></textarea>
      </div>
      <div class="form-group">
        <label for="important">Important</label>
        <input type="checkbox" name="important" class="form-control" ng-model="current_actor.important"></input>
      </div>
      <div class="form-group">
        <label for="influence">Influence Level</label>
        <select class="form-control" id="influence" ng-model="current_actor.influence">
          <option value="">Select Influence Level</option>
          <option value="2">Very influential</option>
          <option value="1">Significant influence</option>
          <option value="0">Moderate influence</option>
          <option value="-1">Low influence</option>
          <option value="-2">No influence</option>
        </select>
      </div>
      <div class="form-group">
        <label for="support">Support</label>
        <select class="form-control" id="support" ng-model="current_actor.support">
          <option value="">Select Support Level</option>
          <option value="2">Very supportive</option>
          <option value="1">Significant Support</option>
          <option value="0">Moderate support</option>
          <option value="-1">Low support</option>
          <option value="-2">No support</option>
        </select>
      </div>
    </form>
  </div>
  <div class="modal-footer">
    <button class="btn btn-primary" ng-click="save($event)" ng-class="{disabled: current_actor.name == '' }">Save</button>
    <button class="btn btn-warning" ng-click="cancel($event)">Cancel</button>
  </div>
</script>