<script type="text/ng-template" id="barrier-aside.html">
  <div class="modal-header">
    <h3 class="modal-title"><%= t('.barrier') %></h3>
  </div>
  <div class="modal-body">
    <form id="barrier_form">
      <div class="form-group">
        <!-- <label for="title"><%= t('.description') %></label> -->
        <!-- <input type="textarea" name="description" class="form-control" ng-model="current_barrier" placeholder="<%= t('.description_placeholder') %>"> -->
        <textarea name="description" id="desc_area" form="barrier_form" cols="30" rows="10" class="form-control" ng-model="current_barrier" placeholder="<%= t('.description_placeholder') %>">
          {{current_barrier}}
        </textarea>
      </div>
    </form>
  </div>
  <div class="modal-footer">
    <button class="btn btn-primary" ng-click="save($event)" ng-class="{disabled: current_barrier == ''}"><%= t('.save_button') %></button>
    <button class="btn btn-warning" ng-click="cancel($event)"><%= t('.cancel_button') %></button>
  </div>
</script>
