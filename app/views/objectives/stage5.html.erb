<% content_for :breadcrumb do %>
  <div class="breadcrumb_bg">
    <ol class="breadcrumb container">
      <li>
        <%= link_to t('.projects'), projects_path, target: "_self" %>
      </li>
      <li><%= link_to truncate(@project.title, length: 30), @project, target: "_self" %></li>
      <li><%= t('.stage5') %></li>
    </ol>
  </div>
<% end %>

<div class="container main">
  <div class="row">
    <div class="col-xs-12 col-sm-12 col-md-3 col-lg-3 stage_menu">
      <h3><%= t('.title') %></h3>
      <ul class="nav nav-stacked">
        <li class="active"><a href="#"><i class="fa fa-check-circle"></i> <%= t('.subtitle1') %></a></li>
        <li class=""><a href="#"><i class="fa fa-check-circle"></i> <%= t('.subtitle2') %></a></li>
      </ul>
    </div>
    <div class="col-xs-12 col-sm-12 col-md-9 col-lg-9">
      <h2><%= t('.title') %></h2>
      <p><%= t('.title_description') %></p>
      <div role="tabpanel" class="tabpanel">
        <!-- nav tabs -->
        <ul class="nav nav-tabs" role="tablist">
          <li role="presentation" class="active"><a href="#data" aria-controls="data" role="tab" data-toggle="tab"><%= t('.data_entry') %></a></li>
          <li role="presentation"><a href="#explanation" aria-controls="explanation" role="tab" data-toggle="tab"><%= t('.explanation_examples') %></a></li>
          <li role="presentation"><a href="#tips" aria-controls="tips" role="tab" data-toggle="tab"><%= t('.workshop_tips') %></a></li>
        </ul>
        <!-- tab panes -->
        <div class="tab-content" ng-controller="stage5Ctrl">
          <div role="tabpanel" class="tab-pane active" id="data">
        <!-- actions -->
          <div class="panel panel-default objetives">
            <!-- activities -->
            <div class="collapse in" id="action1">
              <button type="button" class="btn btn-info pull-right" ng-click="add_edit_activity()"><%= t('.add_button') %></button>
              <h4><%= t('.subtitle1') %> <span ng-if="policy.solutions"><i class="fa fa-info-circle" title="Describe the main actions that will be conducted to the desired change"></i></span></h4>
              <p ng-if="">
                <%= t('.without_activities') %>
              </p>
              <table class="table ">
                <thead>
                  <tr>
                    <th><%= t('.activities') %></th>
                    <th><%= t('.description') %></th>
                    <th><%= t('.outcomes') %></th>
                    <th class="text-right"><%= t('.actions') %></th>
                  </tr>
                </thead>
                <tbody>
                  <tr ng-repeat="activity in activities">
                    <td>{{activity.title}}</td>
                    <td>{{activity.description}}</td>
                    <td>{{activity.outcome_ids}}</td>
                    <td class="text-right">
                      <i class="fa fa-pencil-square-o" ng-click="add_edit_activity(activity)" title="Edit"></i>
                      <i class="fa fa-trash" ng-click="delete_activity(activity)" title="Delete"></i>
                    </td>
                  </tr>
                </tbody>
              </table>
              <%= render 'modal_activity' %>
            </div>
            <!-- end of actions -->
          </div>
          <div class="bg_grey">
            <h4><%= t('.subtitle2') %></h4>
            <p>
              <%= t('.subtitle2_explanation') %>
            </p>
            <a href="#" target="_self" class="btn btn-warning"><i class="fa fa-calendar"></i> <%= t('.trello') %></a>
          </div>
          </div>
          <!-- end of actions -->
          <div role="tabpanel" class="tab-pane" id="explanation">
          <%= render 'explanation_stage5' %>
          </div>
          <div role="tabpanel" class="tab-pane" id="tips">
            tips
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
