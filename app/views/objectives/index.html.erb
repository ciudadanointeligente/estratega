<h1>Listing objectives</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @objectives.each do |objective| %>
      <tr>
        <td><%= objective.title %></td>
        <td><%= objective.description %></td>
        <td><%= link_to 'Show', [@project, objective] %></td>
        <td><%= link_to 'Edit', edit_project_objective_path(@project, objective) %></td>
        <td><%= link_to 'Destroy', [@project, objective], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Objective', new_project_objective_path(@project) %>
