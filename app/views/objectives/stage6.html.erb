<% content_for :breadcrumb do %>
  <div class="breadcrumb_bg">
    <ol class="breadcrumb container">
      <li>
        <%= link_to t('.projects'), projects_path, target: "_self" %>
      </li>
      <li><%= link_to truncate(@project.title, length: 30), @project, target: "_self" %></li>
      <li><%= t('.stage6') %></li>
    </ol>
  </div>
<% end %>

<div class="container main">
  <div class="row">
    <div class="col-xs-12 col-sm-12 col-md-3 col-lg-3 stage_menu">
      <h3><%= t('.title') %></h3>
      <ul class="nav nav-stacked">
        <li class="active"><a href="#"><i class="fa fa-check-circle"></i> <%= t('.subtitle1') %></a></li>
      </ul>
    </div>
    <div class="col-xs-12 col-sm-12 col-md-9 col-lg-9" ng-controller="stage6Ctrl">
      <div class="alert" role="alert" ng-class="messages.response?'alert-success':'alert-danger'" ng-if="messages.message">
        <button ng-click="dismiss_modal()" type="button" class="close" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        {{ messages.message }}
      </div>

      <h2><%= t('.title') %></h2>
      <p><%= t('.title_description') %></p>
      <div role="tabpanel" class="tabpanel">
        <!-- nav tabs -->
        <ul class="nav nav-tabs" role="tablist">
          <li role="presentation" class="active"><a href="#data" aria-controls="data" role="tab" data-toggle="tab"><%= t('.data_entry') %></a></li>
          <li role="presentation"><a href="#explanation" aria-controls="explanation" role="tab" data-toggle="tab"><%= t('.explanation_examples') %></a></li>
          <li role="presentation"><a href="#tips" aria-controls="tips" role="tab" data-toggle="tab"><%= t('.workshop_tips') %></a></li>
        </ul>
        <!-- tab panel -->
        <div class="tab-content">
          <div role="tabpanel" class="tab-pane active" id="data">
        <!-- actions -->
          <div class="bg_grey">
            <button type="button" class="btn btn-info pull-right" ng-click="add_edit_ask()"><%= t('.add_button') %></button>
            <h4><%= t('.subtitle1') %></h4>
            <p>
              <%= t('.subtitle1_explanation') %>
            </p>
            <table class="table">
              <thead>
                <tr>
                  <th><%= t('.actor') %></th>
                  <th><%= t('.ask') %></th>
                  <th class="text-right"><%= t('.actions') %></th>
                </tr>
              </thead>
              <tbody>
                <tr ng-repeat="ask in asks">
                  <td>{{ ask.actor_name }}</td>
                  <td>{{ ask.description }}</td>
                  <td class="text-right"><a href="#" title="Edit" ng-click="add_edit_ask(ask)"><i class="fa fa-pencil-square-o"></i></a> <a href="#" title="Delete" ng-click="delete_ask(ask)"><i class="fa fa-trash"></i></a></td>
                </tr>
              </tbody>
            </table>
          </div>
          <%= render "asks_modal" %>
          </div>
          <!-- end of actions -->
          <div role="tabpanel" class="tab-pane" id="explanation">
            <%= render 'explanation_stage6' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
