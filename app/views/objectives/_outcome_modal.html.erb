<script type="text/ng-template" id="outcome-aside.html">
  <div class="modal-header">
    <h3 class="modal-title">New Interim Outcome</h3>
  </div>
  <div class="modal-body">
    <form>
      <div class="form-group">
        <label for="description">Interim Outcome</label>
        <textarea name="description" class="form-control" ng-model="current_outcome.description" placeholder="Add any important outcome info"></textarea>
      </div>
      <div class="form-group">
        <label for="category">Interim Outcome Type</label>
        <select name="category" ng-model="current_outcome.outcome_type_id">
          <option ng-repeat="ca in outcomes_categories">{{ ca }}</option>
        </select>
      </div>
      <div class="form-group">
        <label for="actor_type">Actor Type</label>
        <select name="actor_type" ng-model="current_outcome.actor_type_id">
          <option ng-repeat="at in actor_types">{{ at }}</option>
        </select>
      </div>
    </form>
  </div>
  <div class="modal-footer">
    <button class="btn btn-primary" ng-click="save($event)" ng-class="{disabled: current_outcome.description == ''}">Save</button>
    <button class="btn btn-warning" ng-click="cancel($event)">Cancel</button>
  </div>
</script>
