<script type="text/ng-template" id="outcome-aside.html">
	<div class="modal-header">
		<h3 class="modal-title">Outcome</h3>
	</div>
	<div class="modal-body">
		<form>
			<div class="form-group">
				<label for="title">Title</label>
				<input type="text" name="title" class="form-control" ng-model="current_outcome.title" placeholder="Enter the outcome's title">
			</div>
			<div class="form-group">
				<label for="description">Description</label>
				<textarea name="description" class="form-control" ng-model="current_outcome.description" placeholder="Add any important outcome info"></textarea>
			</div>
			<div class="form-group">
				<label for="category">Category</label>
				<select name="category" ng-model="current_outcome.category">
					<option ng-repeat="ca in outcomes_categories">{{ ca }}</option>
				</select>
			</div>
		</form>
	</div>
	<div class="modal-footer">
		<button class="btn btn-primary" ng-click="save($event)" ng-class="{disabled: current_outcome.title == ''}">Save</button>
		<button class="btn btn-warning" ng-click="cancel($event)">Cancel</button>
	</div>
</script>