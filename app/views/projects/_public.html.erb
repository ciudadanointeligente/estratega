<table id="public_projects" class="table table-striped table-bordered">
	<thead>
		<tr>
			<th>Name</th>
			<th>Description</th>
			<th>Actions</th>
		</tr>
	</thead>
	<tbody>
		<% @public_projects.each do | p | %>
		<tr>
			<td><%= link_to p.title, p %></td>
			<td><%= truncate p.description, length: 140 %></td>
			<td>
				<a href="#"><i class="fa fa-eye"></i></a>
			</td>
		</tr>
		<% end %>
	</tbody>
</table>

<script type="text/javascript">
$(document).ready(function(){
	$('#public_projects').DataTable({
		"dom": '<"toolbar"f>rt<"footer-project-table"ip>',
		"pagingType": "simple_numbers",
		"order": [],
		"columnDefs": [ {
			"targets"  : 'no-sort',
			"orderable": false,
		}]
	});
});
</script>