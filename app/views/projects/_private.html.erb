<table id="private_projects" class="table table-striped table-bordered">
	<thead>
		<tr>
		<th>Name</th>
		<th>Description</th>
		<th class="text-right no-sort">Actions</th>
		</tr>
	</thead>
	<tbody>
		<% @projects.each do | p | %>
		<tr>
			<td><%= link_to p.title, p %></td>
			<td><%= truncate p.description, length: 140 %></td>
			<td class="text-right actions">
				<%= link_to edit_project_path(p) do %>
					<i class="fa fa-edit" title="Edit"></i>
					<% end %>
					<a href="#"><i class="fa fa-home" title="Vist Home"></i></a>

					<a href="#"><i class="fa fa-copy" title="Clone"></i></a>
					<%= link_to p, method: :delete, data: { confirm: 'Are you sure?' } do %>
					<i class="fa fa-trash" title="Delete"></i>
				<% end %>
			</td>
		</tr>
		<% end %>
	</tbody>
</table>

<script type="text/javascript">
$(document).ready(function(){
	$('#private_projects').dataTable({
		"dom": '<"toolbar"f>rt<"footer-project-table"ip>',
		"pagingType": "simple_numbers",
		"order": [],
		"columnDefs": [ {
			"targets"  : 'no-sort',
			"orderable": false,
		}]
	});
});
</script>