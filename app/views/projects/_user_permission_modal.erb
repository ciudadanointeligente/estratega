<script type="text/ng-template" id="user-permission-aside">
  <div class="modal-header">
      <h3 class="modal-title">Share</h3>
  </div>
  <div class="modal-body">
    <form>
      <div class="form-group">
        <label for="users">People</label>
        <input type="text" class="form-control" name="users" placeholder="Add email accounts sepparated by commas">
      </div>
      <div class="form-group">
        <label for="message">Message</label>
        <textarea class="form-control" name="message" placeholder="Add a note"></textarea>
      </div>
      <div class="form-group">
        <label for="share">Share with</label>
        <ul>
          <li></li>
        </ul>
      </div>
    </form>
  </div>
  <div class="modal-footer">
    <button class="btn btn-primary" ng-click="save($event)">Save</button>
    <button class="btn btn-warning" ng-click="cancel($event)">Cancel</button>
  </div>
</script>