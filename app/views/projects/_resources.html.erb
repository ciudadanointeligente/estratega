<div class="project-hero02">
  <h2><%= @project.title %></h2>
  <p><%= @project.description %></p>
</div>
<div class="project-content">
  <div class="box">
    <div ng-controller="projectResourcesCtrl">
        <div class="addNew dropdown pull-right">
            <%# link_to 'New Resource', new_resource_path %>
            <a id="dLabel" class="btn btn-warning" ng-click="open_form()" >
            <i class="fa fa-plus-circle"></i> Añadir Documentos
          </a>
        </div>
        <div class="clearfix"></div>

        <div class="panel panel-info">
          <div class="panel-heading"  st-safe-src="resources" st-table="resource_list">
            <input st-search placeholder="Búsqueda" class="input-sm form-control" type="search"/>
          </div>
              <table class="table table-striped table-bordered document" st-safe-src="resources" st-table="resource_list">
                <thead>
                  <tr>
                    <th>Id</th>
                    <th st-sort="title" >Nombre</th>
                    <th>Descripción</th>
                    <th>Tags</th>
                    <th class="text-center no-sort">Público</th>
                    <th>Último Cambio</th>
                    <th class="text-right no-sort">Acciones</th>
                  </tr>
                </thead>
                <tbody>
                    <tr ng-repeat="resource in resource_list">
                        <td>{{resource.id}}</td>
                        <td><a href="{{resource.link}}" target="_blank">{{resource.title}}</a></td>
                        <td>{{resource.description}}</td>
                        <td>
                          <span class="label label-info" ng-repeat="tag in resource.tag_list">{{tag}}</span>
                        </td>
                        <td>{{resource.public}}</td>
                        <td>{{resource.updated_at}}</td>
                        <td>
                            <%= button_tag "Editar", {class: "btn btn-link", :"ng-click" => "open_form(resource)", type: "button"} do %>
                              <i class="fa fa-edit" title="Edit"></i>
                            <% end %>
                            <%= button_tag "Borrar", class: "btn btn-link", :"ng-click" => "delete_resource(resource)", type: "button" do %>
                              <i class="fa fa-trash" title="Delete"></i>
                            <% end %>
                        </td>
                    </tr>
                </tbody>
                <tfoot>
                  <tr>
                    <td colspan="7" class="text-center">
                      <div st-pagination="" st-items-by-page="itemsByPage" st-displayed-pages="7"></div>
                    </td>
                  </tr>
                </tfoot>
              </table>
        </div>

              <div class="clearfix"></div>
    </div>
  </div>
</div>