<div ng-controller="projectResourcesCtrl">

    <div class="addNew dropdown pull-right">
        <%# link_to 'New Resource', new_resource_path %>
        <a id="dLabel" data-target="#" href="http://example.com" data-toggle="dropdown" aria-haspopup="true" role="button" aria-expanded="false" class="btn btn-warning">
        Add Resource
        <span class="caret"></span>
      </a>
    </div>
    <div class="clearfix"></div>
          <table id="resources" class="table table-striped table-bordered">
            <thead>
              <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>Tags</th>
                <th class="text-center no-sort">Public</th>
                <th>Last update</th>
                <th class="text-right no-sort">Actions</th>
              </tr>
            </thead>
            <tbody>
                <tr ng-repeat="resource in resources">
                    <td>{{resource.id}}</td>
                    <td>{{resource.title}}</td>
                    <td>{{resource.description}}</td>
                    <td>{{resource.tag_list}}</td>
                    <td>{{resource.public}}</td>
                    <td>{{resource.updated_at}}</td>
                    <td>
                        <%= button_tag "Edit", {class: "btn", :"ng-click" => "e_policy_dimension(pp)", type: "button"}%>
                    </td>
                </tr>
                <tr>
                  <td>1</td>
                  <td><a href="#">Trello Name</a></td>
                  <td>Great Resource</td>
                   <td class="tags">
                    <span class="label label-default">Tag1</span>
                    <span class="label label-default">Tag1</span>
                    <span class="label label-default">Tag1</span>
                  </td>
                  <td class="text-center">
                    <i class="fa fa-globe" title="Public"></i>
                  </td>
                  <td>2015-03-05 13:02:30 UTC</td>
                    <td class="text-right actions">
                       <a href="#"><i class="fa fa-edit" title="Edit"></i></a>
                        <a href="#"><i class="fa fa-trash" title="Delete"></i></a>
                    </td>
                  </tr>
                  <tr>
                  <td>2</td>
                  <td><a href="#">Document Name</a></td>
                  <td>Great Resource</td>
                   <td class="tags">
                    <span class="label label-default">Tag1</span>
                    <span class="label label-default">Tag1</span>
                    <span class="label label-default">Tag1</span>
                  </td>
                  <td class="text-center">
                    <i class="fa fa-globe" title="Public"></i>
                  </td>
                  <td>2015-03-05 13:02:30 UTC</td>
                    <td class="text-right actions">
                       <a href="#"><i class="fa fa-edit" title="Edit"></i></a>
                        <a href="#"><i class="fa fa-trash" title="Delete"></i></a>
                    </td>
                  </tr>
                  <tr>
                      <td>3</td>
                      <td><a href="#">Sandbox 3</a></td>
                      <td>Great Resource</td>
                       <td class="tags">
                        <span class="label label-default">Tag1</span>
                        <span class="label label-default">Tag1</span>
                        <span class="label label-default">Tag1</span>
                      </td>
                      <td class="text-center">
                        <i class="fa fa-globe" title="Public"></i>
                      </td>
                      <td>2015-03-05 13:02:30 UTC</td>
                      <td class="text-right actions">
                            <a href="#">
                                <i class="fa fa-edit" title="Edit"></i>
                            </a>                  
                            <a href="#">
                                <i class="fa fa-cog" title="Edit Configuration"></i>
                            </a>                  
                            <a href="#">
                                <i class="fa fa-copy" title="Clone"></i>
                            </a>
                            <a href="#">
                                <i class="fa fa-download" title="Export to JSON"></i>
                            </a>                  
                            <a data-confirm="Are you sure you want to permanently delete this sandbox?" data-method="delete" href="#" rel="nofollow">
                                <i class="fa fa-trash" title="Delete"></i>
                            </a>                
                        </td>
                  </tr>
            </tbody>
          </table>
          <div class="clearfix"></div>
    <script type="text/javascript">
    $(document).ready(function(){
        $('#resources').dataTable( {
        "dom": '<"toolbar">frtip',
        "pagingType": "simple_numbers",
        "order": [],
        "columnDefs": [ {
          "targets"  : 'no-sort',
          "orderable": false,
        }]
        } );
    });

    </script>
</div>