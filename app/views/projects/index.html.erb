<h3>Projects</h3>

<div class="row">
  <div class="addNew col-md-12 text-right">
    <%= link_to new_project_path, class: 'btn btn-default' do %>
      <i class="fa fa-plus-square-o"></i> New Project
    <% end %>
  </div>
</div>

<div role="tabpanel">
  <ul class="nav nav-tabs" role="tablist">
    <li role="presentation" class="active">
      <a href="#private" aria-controls="private" role="tab" data-toggle="tab">Private</a>
    </li>
    <li role="presentation">
      <a href="#public" aria-controls="public" role="tab" data-toggle="tab">Public</a>
    </li>
  </ul>

  <div class="tab-content">
    <div role="tabpanel" class="tab-pane active" id="private">
      <%= render "private" %>
    </div>

    <div role="tabpanel" class="tab-pane" id="public">
      <%= render "public" %>
    </div>
  </div>
</div>

