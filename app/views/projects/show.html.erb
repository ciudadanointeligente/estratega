<% content_for :breadcrumb do %>
  <div class="breadcrumb_bg">
    <ol class="breadcrumb container">
      <li>
        <%= link_to t('.projects'), projects_path, target: "_self" %>
      </li>
      <li class="active"><%= truncate(@project.title, length: 30) %></li>
    </ol>
  </div>
<% end %>

<hr>
<div role="tabpanel">
  <ul class="nav nav-tabs" role="tablist">
    <li role="presentation" class="active"><a href="#stages" aria-controls="stages" role="tab" data-toggle="tab"><%= t('.stages') %></a></li>
    <li role="presentation"><a href="#dashboard" aria-controls="dashboard" role="tab" data-toggle="tab"><%= t('.dashboard') %></a></li>
    <li role="presentation"><a href="#documents" aria-controls="documents" role="tab" data-toggle="tab"><%= t('.documents') %></a></li>
    <li role="presentation"><a href="#overview" aria-controls="overview" role="tab" data-toggle="tab"><%= t('.overview') %></a></li>
  </ul>

  <!-- tab panes -->
  <div class="tab-content">
    <div role="tabpanel" class="tab-pane active" id="stages">
      <div class="">
        <div class="">
          <div class="project-hero">
            <h2><%= @project.title %></h2>
            <p><%= @project.description %></p>
          </div>
          <div class="panel panel-default">
            <div class="panel-heading">
              <h4 class="panel-title" title="Complete Stage"><i class="<%= icon_class_stage 1 %>"></i> <%= t('.stage1_title') %></h4>
            </div>
            <div id="stage1">
              <table class="table">
                  <tbody>
                    <!-- real problem -->
                    <tr title="Complete Step">
                      <td class="text-center td-w-10p">
                        <i class="<%= icon_class @real_problem %>"></i>
                      </td>
                      <td>
                        <%= link_to link_text(:real_problem), stage1_project_path, target: "_self"  %>
                      </td>
                    </tr>
                    <!-- policy problems -->
                    <tr title="Complete Step">
                      <td class="text-center td-w-10p">
                          <i class="<%= icon_class @policy_problems, @real_problem %>"></i>
                      </td>
                      <td>
                        <%= link_to link_text(:policy_problems), stage1_project_path(anchor: "policy-problems"), target: "_self" %>
                      </td>
                    </tr>
                    <!-- policy solutions -->
                    <tr title="Complete Step">
                      <td class="text-center td-w-10p">
                        <i class="<%= icon_class @solutions, @policy_problems %>"></i>
                      </td>
                      <td>
                        <%= link_to link_text(:solutions), stage1_project_path(anchor: "policy-problems"), target: "_self" %>
                      </td>
                    </tr>
                  </tbody>
            </table>
            </div>
          </div>
        </div>
      </div>
      <div class="">
        <div class="">
          <div class="panel panel-default">
            <div class="panel-heading">
              <h4 class="panel-title" title="You must complete the previous stage"><a data-toggle="collapse" href="#stage2" aria-expanded="false" aria-controls="collapseExample"><i class="<%= icon_class_stage 2 %>"></i> <%= t('.stage2_title') %></a></h4>
            </div>
            <div class="collapse steps" id="stage2">
              <table class="table">
                <tbody>
                  <tr title="You must complete the previous step">
                    <td class="text-center td-w-10p"><i class="<%= icon_class @objectives, @solutions %>"></i></td>
                    <td>
                      <%= link_to link_text(:objectives), stage2_project_path, target: "_self" %>
                    </td>
                  </tr>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
      <hr>
      <h4 class="title_goals"><%= t('.stage3_title') %></h4>
      <% if @objectives.count < 1 %>
        <%= t('.stage3_without_objectives').html_safe %>
      <% else %>
        <% @objectives.each do |objective| %>
          <div class="">
            <div class="">
              <div class="panel panel-default">
                <div class="panel-heading">
                  <table class="table_goals">
                  <tr title="Stage Uninitiated or Incomplete">
                    <td class="td-w-3p"><i class="fa fa-chevron-circle-right pull-left"></i></td>
                    <td><a data-toggle="collapse" href="#goal-<%= objective.id %>" aria-expanded="false" aria-controls="collapseExample"><%= objective.title %></a></td>
                  </tr>
                  </table>
                </div>
                <div class="collapse steps in" id="goal-<%= objective.id %>">
                  <table class="table">
                    <tbody>
                      <tr title="Uninitiated Step">
                        <td class="text-center td-w-10p">
                          <i class="fa fa-unlock"></i>
                        </td>
                        <td><%= link_to "Understand the institutional and decision-making cycles/Policy process", stage3_project_objective_path(@project, objective), target: "_self" %></td>
                      </tr>
                      <tr title="You must complete the previous step">
                        <td class="text-center td-w-10p">
                          <i class="<%= icon_class objective.actors %>"></i>
                        </td>
                        <td>
                          <%= link_to objective_link_text(objective, :actors), stage3_project_objective_path(@project, objective, anchor: "actors"), target: "_self" %>
                        </td>
                      </tr>
                      <tr title="You must complete the previous step">
                        <td class="text-center td-w-10p">
                          <i class="<%= icon_class objective.enabling_factors %>"></i>
                        </td>
                        <td>
                          <%= link_to objective_link_text(objective, :enabling_factors), stage3_project_objective_path(@project, objective, anchor: "factors-barriers"), target: "_self" %>
                        </td>
                      </tr>
                      <tr title="You must complete the previous step">
                        <td class="text-center td-w-10p">
                          <i class="<%= icon_class objective.outcomes %>"></i>
                        </td>
                        <td>
                          <%= link_to objective_link_text(objective, :outcomes), stage4_project_objective_path(@project, objective), target: "_self" %>
                        </td>
                      </tr>
                      <tr title="You must complete the previous step">
                        <td class="text-center td-w-10p">
                          <i class="fa fa-lock"></i>
                        </td>
                        <td>
                          <a href="#">(Coming soon) Define theory of change</a>
                        </td>
                      </tr>
                      <tr title="You must complete the previous step">
                        <td class="text-center td-w-10p">
                          <i class="<%= icon_class objective.activities %>"></i>
                        </td>
                        <td>
                          <%= link_to objective_link_text(objective, :activities), stage5_project_objective_path(@project, objective), target: "_self" %>
                        </td>
                      </tr>
                      <tr title="You must complete the previous step">
                        <td class="text-center td-w-10p">
                          <i class="<%= icon_class objective.asks %>"></i>
                        </td>
                        <td>
                          <%= link_to objective_link_text(objective, :asks), stage6_project_objective_path(@project, objective), target: "_self" %>
                        </td>
                      </tr>
                      <tr title="You must complete the previous step">
                        <td class="text-center td-w-10p">
                          <i class="fa fa-lock"></i>
                        </td>
                        <td>
                          <a href="#">(Coming soon) Develop messages</a>
                        </td>
                      </tr>
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
    <div role="tabpanel" class="tab-pane" id="dashboard">
      <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
          <h2>Activities</h2>
        </div>
      </div>
      <div class="row">
        <div class="col-xs-12 col-sm-6 col-md-4 col-lg-4">
          <div class="well">
            <h3>22 Actividades</h3>
            <ul class="fa-ul">
              <li class="successful"><i class="fa-li fa fa-check-circle"></i>16 actividades éxitosas</li>
              <li class="neutral"><i class="fa-li fa fa-minus-circle"></i>5 actividades neutras</li>
              <li class="failed"><i class="fa-li fa fa-times-circle"></i>1 actividad fallida</li>
            </ul>
          </div>
        </div>
        <div class="col-xs-12 col-sm-6 col-md-4 col-lg-4">
          <div class="well text-center">
            <h3>Porcentaje Actividades Finalizadas</h3>
            <div class="c100 p20 big">
                <span>20%</span>
                <div class="slice">
                    <div class="bar"></div>
                    <div class="fill"></div>
                </div>
              </div>
              <div class="clearfix"></div>
          </div>
        </div>
        <div class="col-xs-12 col-sm-6 col-md-4 col-lg-4">
          <div class="well text-center">
            <h3>Porcentaje de Éxito</h3>
            <div class="c100 p80 big">
                <span>80%</span>
                <div class="slice">
                    <div class="bar"></div>
                    <div class="fill"></div>
                </div>
              </div>
              <div class="clearfix"></div>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
          <div class="well">
            <h3>Estado actividades últimos meses</h3>
            <div class="ct-chart ct-perfect-fourth"></div>
            <script>
              var chart = new Chartist.Line('.ct-chart', {
                labels: ['Ene', 'Feb', 'Mar', 'Abr', 'May', 'Jun','Jul', 'Ago', 'Sept', 'Oct', 'Nov', 'Dic'],
                series: [
                  [1, 5, 2, 5, 4, 3, 1, 5, 2, 5, 4, 3],
                  [2, 3, 4, 8, 1, 2, 2, 3, 4, 8, 1, 2],
                  [5, 4, 3, 2, 1, 2, 5, 4, 3, 2, 1, 1]
                ]
              }, {
                low: 0,
                showArea: true,
                showPoint: true,
                height: '300px',
                fullWidth: true
              });

              chart.on('draw', function(data) {
                if(data.type === 'line' || data.type === 'area') {
                  data.element.animate({
                    d: {
                      begin: 2000 * data.index,
                      dur: 2000,
                      from: data.path.clone().scale(1, 0).translate(0, data.chartRect.height()).stringify(),
                      to: data.path.clone().stringify(),
                      easing: Chartist.Svg.Easing.easeOutQuint
                    }
                  });
                }
              });
            </script>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-8 col-lg-8">
          <div class="well">
            <h3>Próximas actividades</h3>
            <p><a href="#">Ver todas las actividades</a></p>
            <table class="table">
              <tr>
                <th>Fecha</th>
                <th>Actividad</th>
              </tr>
              <tr>
                <td>12/12/2020</td>
                <td>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Phasellus nec dolor enim. Donec porttitor mauris</td>
              </tr>
              <tr>
                <td>12/12/2020</td>
                <td>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Phasellus nec dolor enim. Donec porttitor mauris</td>
              </tr>
              <tr>
                <td>12/12/2020</td>
                <td>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Phasellus nec dolor enim. Donec porttitor mauris</td>
              </tr>
              <tr>
                <td>12/12/2020</td>
                <td>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Phasellus nec dolor enim. Donec porttitor mauris</td>
              </tr>
            </table>
          </div>
        </div>
        <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4">
          <div class="alert alert-danger">
            <table class="indicator">
              <tr>
                <td>100</td>
                <td>Actividades vencidas</td>
              </tr>
            </table>
          </div>
          <div class="alert alert-warning">
            <table class="indicator">
              <tr>
                <td>250</td>
                <td>Actividades sin finalizar</td>
              </tr>
            </table>
          </div>
        </div>
      </div>
      <hr>
      <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
          <h2>Interim Outcomes</h2>
        </div>
      </div>
      <div class="row">
        <div class="col-xs-12 col-sm-6 col-md-4 col-lg-4">
          <div class="well">
            <h3>10 Interim Outcomes</h3>
            <ul class="fa-ul">
              <li class="neutral"><i class="fa-li fa fa-minus-circle"></i>1 outcome sin actividades</li>
              <li class="neutral"><i class="fa-li fa fa-minus-circle"></i>1 outcome sin actividades próximas</li>
              <li class="failed"><i class="fa-li fa fa-times-circle"></i>3 outcome con actividades vencidas</li>
            </ul>
          </div>
        </div>
        <div class="col-xs-12 col-sm-6 col-md-4 col-lg-4">
          <div class="well text-center">
            <h3>Porcentaje Interim Outcomes logrados</h3>
            <div class="c100 p30 big">
                <span>30%</span>
                <div class="slice">
                    <div class="bar"></div>
                    <div class="fill"></div>
                </div>
              </div>
              <div class="clearfix"></div>
          </div>
        </div>
        <div class="col-xs-12 col-sm-6 col-md-4 col-lg-4">
          <div class="well text-center">
            <h3>Porcentaje asignación de actividades predefinidas</h3>
