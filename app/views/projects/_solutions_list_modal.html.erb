<script type="text/ng-template" id="solutions-list-aside.html">
<div class="modal-header">
  <h3 class="modal-title"><%= t('.solutions') %></h3>
</div>
<div class="modal-body">
  <table class="table">
    <thead>
      <tr>
        <th><%= t('.title') %></th>
        <th><%= t('.description') %></th>
      </tr>
    </thead>
    <tbody>
      <tr ng-repeat="solution in solutions" ng-class="{danger: solution.objective_ids.length<1}">
        <td>{{ solution.title }}</td>
        <td>{{ solution.description | limitTo:500 }}...</td>
      </tr>
    </tbody>
  </table>
</div>
<div class="modal-footer">
  <button class="btn btn-warning" ng-click="cancel($event)"><%= t('.back_button') %></button>
</div>
</script>
