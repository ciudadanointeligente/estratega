<h3 class="page-header">Sandboxes</h3>

<div role="tabpanel">
  <ul class="nav nav-tabs" role="tablist">
    <li role="presentation" class="active">
      <a href="#private" aria-controls="private" role="tab" data-toggle="tab">Private</a>
    </li>
    <li role="presentation">
      <a href="#public" aria-controls="public" role="tab" data-toggle="tab">Public</a>
    </li>
  </ul>

  <div class="tab-content">
    <div role="tabpanel" class="tab-pane active" id="private">
      
      <table class="table table-striped">
        <thead>
          <tr>
            <th>id</th>
            <th>Name</th>
            <th>Description</th>
            <th>Last update</th>
            <th colspan="4"></th>
          </tr>
        </thead>

        <tbody>
          <% if( ! @sandboxes.blank? ) %>
          <% @sandboxes.each do |sandbox| %>
            <tr>
              <td><%= sandbox.id %></td>
              <td>
                <%= link_to sandbox do %>
                  <%= sandbox.name %>
                <% end %>
              </td>
              <td><%= sandbox.description %></td>
              <td><%= sandbox.updated_at %></td>
              <td>
                <% if(sandbox.public?) %>
                  <i class="fa fa-globe" title="Public"></i>
                <% end %>
              </td>
              <td>
                <%= link_to sandbox do %>
                  <i class="fa fa-edit" title="Edit"></i>
                <% end %>
              </td>
              <td>
                <i class="fa fa-eye" title="View"></i>
              </td>
              <td>
                <%= link_to edit_sandbox_path(sandbox) do %>
                  <i class="fa fa-cog" title="Edit Configuration"></i>
                <% end %>
              </td>
              <td>
                <i class="fa fa-copy" title="Clone"></i>
              </td>
              <td>
                <%= link_to sandbox, method: :delete, data: { confirm: 'Are you sure you want to permanently delete this sandbox?' } do %>
                  <i class="fa fa-trash" title="Delete"></i>
                <% end %>
              </td>
            </tr>
          <% end %>
          <% else %>
            <tr>
              <td colspan="8">
                <p class="text-center">no records</p>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <div class="addNew">
          <%= link_to new_sandbox_path, class: 'btn btn-default' do %>
              <i class="fa fa-plus-square-o"></i> New Sandbox
          <% end %>
      </div>

    </div>

    <div role="tabpanel" class="tab-pane" id="public">
      <table class="table table-striped">
        <thead>
          <tr>
            <th>id</th>
            <th>Name</th>
            <th>Description</th>
            <th>Last update</th>
          </tr>
        </thead>

        <tbody>
          <% if( ! @public_sandboxes.blank? ) %>
          <% @public_sandboxes.each do |sandbox| %>
            <tr>
              <td><%= sandbox.id %></td>
              <td>
                <%= link_to sandbox do %>
                  <%= sandbox.name %>
                <% end %>
              </td>
              <td><%= sandbox.description %></td>
              <td><%= sandbox.updated_at %></td>
            </tr>
          <% end %>
          <% else %>
            <tr>
              <td colspan="8">
                <p class="text-center">no records</p>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>