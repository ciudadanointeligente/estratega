<div class="row">
	<div class="col-md-12">
		<h2 class="page-header">Listing sandboxes</h2>
		<div class="addNew">
		<%= link_to new_sandbox_path, class: 'btn btn-success' do %>
  		<i class="fa fa-plus-square-o"></i> New Sandbox
		<% end %>
	</div>
	</div>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>id</th>
      <th>Name</th>
      <th>Description</th>
      <th>Last update</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sandboxes.each do |sandbox| %>
      <tr>
        <td><%= sandbox.id %></td>
        <td>
          <%= link_to sandbox do %>
            <%= sandbox.name %>
          <% end %>
        </td>
        <td><%= sandbox.description %></td>
        <td><%= sandbox.updated_at %></td>
        <td>
          <%= link_to sandbox do %>
            <i class="fa fa-eye" title="Show"></i>
          <% end %>
        </td>
        <td>
          <%= link_to edit_sandbox_path(sandbox) do %>
            <i class="fa fa-edit" title="Edit"></i>
          <% end %>
        </td>
        <td>
          <%= link_to sandbox, method: :delete, data: { confirm: 'Are you sure?' } do %>
            <i class="fa fa-trash" title="Delete"></i>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
