<%= simple_form_for(@person) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :alternate_name %>
    <%= f.input :email %>
    <%= f.input :gender %>
    <%= f.input :birth_date %>
    <%= f.input :death_date %>
    <%= f.input :image %>
    <%= f.input :summary %>
    <%= f.input :biography %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
