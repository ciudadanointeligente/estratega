<% content_for :top do %>
  <% if( !user_signed_in? ) %>
    <div class="row banner">
      <div class="container">
        <div class="col-md-6 mtb40">
          <h2><%= t('.guest_main_txt') %></h2>
        </div>
        <div class="col-md-4 col-md-offset-2 mtb40">
          <h3><%= t('.sign_up') %></h3>
          <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
            <% flash.each do |name, msg| %>
              <%= content_tag :div, msg, class: 'error' if msg.is_a?(String) %>
            <% end %>
            <div class="form-group">
              <%= f.email_field :email, required: true, class: "form-control", placeholder: t('.email_placeholder') %>
            </div>
            <div class="form-group">
              <%= f.password_field :password, required: true, class: "form-control", placeholder: t('.password_placeholder') %>
            </div>
            <div class="form-group">
              <%= f.password_field :password_confirmation, required: true, class: "form-control", placeholder: t('.confirm_password_placeholder') %>
            </div>
            <div class="text-right">
              <%= f.submit t('.button_sign_up'), class: "btn btn-warning" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
<% end %>
